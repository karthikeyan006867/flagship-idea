{
  "name": "hdip-monorepo",
  "version": "1.0.0",
  "description": "Human Decision Intelligence Platform - Enterprise-grade decision tracking and simulation system",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "deploy": "node -e \"console.log('Run: .\\\\deploy-vercel.ps1')\"",
    "deploy:frontend": "cd apps/frontend && vercel --prod",
    "deploy:backend": "cd apps/backend && vercel --prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
